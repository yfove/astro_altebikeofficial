---
const allPosts = await Astro.glob("../pages/post/**/*.mdx");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<div class="wrapper pt-2 ">
  <div class="alltags p-2">
    <div class="heading">
      <!-- <a href="/featured"> <h2>Categories</h2></a> -->
      <!-- <hr style="width:100%;" /> -->
    </div>
    <div class="tags max-md:items-center max-md:justify-center flex">
      <p class="tag ">
        <a href={`/post/`} class="gradient-text font-bold">
          All
        </a>
      </p>
      {
        tags.map((tag) => (
          <p class="tag ">
            <a href={`/tags/${tag}`} class="gradient-text font-bold">
              {tag}
            </a>
          </p>
        ))
      }
    </div>
  </div>
</div>

<style>
  a {
    /* color: #00539f; */
  }

  .tags {
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: solid 2px #2a2a2d;
    border-radius: 0.5em;
    padding: 0.1rem 0.5em;
    font-size: 1.15em;
    background-color: var(--color-secondary);
    color: #818cf8;
  }
</style>
