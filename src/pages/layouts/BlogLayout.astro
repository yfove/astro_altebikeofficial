---
import Header from "../../components/header2.astro";
import BaseHead from "../../components/BaseHead.astro";
const { title } = Astro.props;
// import "../../styles/index.css";
import "../../styles/blog.css";
---
<!DOCTYPE html>
<html lang="en">
  <BaseHead
    title="Blog Page"
    description="A page to display all our blog posts"
  />
  <body>
    <div class="layout">
      <h1 class="gradient-text">{title}</h1>
      <!-- <Header /> -->
      <main>
        <slot />
      </main>
    </div>
    <style>
      body {
        margin: 0;
        background-color: #fff;
        width: 100%;
      }
      .layout {
        max-width: 1280px;
        margin: 0 auto;
      }
    </style>
  </body>
</html>

<style lang="scss">
  .layout h1 {
    font-size: 6rem;
    @apply bg-gradient-to-br from-indigo-500 via-fuchsia-500 to-pink-500;
  }

  .layout body {
    justify-content: center;
    align-items: center;
  }
</style>