---
import BlogLayout from "../layouts/BlogLayout.astro";
import { Card } from "accessible-astro-components";
import Footer from "../components/footer.astro";
import Header from "../components/header2.astro";
import Showcase from "../components/showcase2.astro";

const guides = await Astro.glob("../pages/guides/**/*.mdx");
---

<html>
  <head>
    <Header />
  </head>
  <div class="page-container">
    <BlogLayout title="Guides & Tutorials">
      <br />
      <section>
        <div class="blog container">
          <ul>
            {
              guides.map((post) => (
                <li>
                  <Card
                    url={"/guides/" + post.frontmatter.slug}
                    img={post.frontmatter.image}
                    title={post.frontmatter.title}
                    footer={post.frontmatter.author}
                  >
                    {post.frontmatter.description}
                    <div class="flex gap-x-2">
                      {post.frontmatter.tags &&
                        post.frontmatter.tags.map((tag: string) => (
                          <span>{tag}</span>
                        ))}
                    </div>
                  </Card>
                </li>
              ))
            }
          </ul>
        </div>
      </section>
    </BlogLayout>
    <br />
    
  </div>

  <Footer />

  <style lang="scss" is:global>
    body {
      background-color: #000;
    }

    .page-container {
      padding: 1rem;
    }

    .blog ul {
      display: grid;
      grid-gap: 2rem;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      list-style-type: none;
    }

    .blog li > .card {
      background: black;
      border: 2px solid white;
      color: #818cf8;
      border-radius: 0.5rem;
    }

    small {
      margin-top: 10px;
    }

    .card span {
      background: #818cf8;
      border-radius: 0.5rem;
      padding: 3px 6px;
      color: white;
    }
  </style>
</html>
