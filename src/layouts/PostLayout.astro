---
import "../styles/blog.css";
import Header from "../components/header2.astro";
import Footer from "../components/footer.astro";
import Footer2 from "../components/footer2.astro";
import Sidebar from "../components/sidebar.astro";
import Accordian from "../components/accordian.astro";

const {
  frontmatter: { title, description, pubDate, pubTime, image, author, credit },
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <title>{pageTitle}</title> -->
  </head>
  <Header />

  <body>
    <div class="blog-container">
      <main>
        <a href="javascript:history.back()" class="back-button"
          >Back to Previous</a
        > |
        <article>
          <div class="article-head">
            <h1 class="title">{title}</h1>
            <small>Written by: {author}</small>
          </div>
          <br />
          <div class="article-body">
            {image && <img width={720} height={360} src={image} alt="" />}
            <small class="article-small">
              Published on: {pubTime} â€¢
              {pubDate && <time>{pubDate}</time>}
              {credit}
            </small>
            <hr />
            <slot />
          </div>
        </article>
        <br />
        <a href="javascript:history.back()" class="back-button"
          >Back to Previous</a
        >
        <span>|</span>
        <a href="/" class="back-button">Back to Home</a>
      </main>
      <div class="sidebar-container">
        <Sidebar />
      </div>
    </div>

    <!-- accordian component -->
    <Accordian />

    <div class="footer-container">
      <!-- <Footer2 /> -->
      <Footer />
    </div>

    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }

      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

      h1 {
        font-size: 2rem;
      }

      html {
        min-height: 100vh;
        height: 100%;
      }

      body {
        height: 100%;
        color: white;
        background: black;
      }

      .blog-container {
        display: flex;
        min-height: 100vh;
        margin: 7rem;
      }

      main {
        flex: 3;
      }

      .sidebar-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        /* padding: 0 0 0 2rem; */
      }

      time {
        display: inline-block;
        margin-top: 10px;
      }

      .back-button {
        color: #818cf8;
      }

      .article-small {
        color: #97a1f7;
        /* color: #f472b6; */
      }

      h1 {
        font-size: 3rem;
      }
      .blog-container {
        max-width: 1000px;
        margin: 0 auto; /* Center the container horizontally */
        padding: 20px;
        border: 2px solid #818cf8;
        border-radius: 0.4rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: Add a box shadow for a subtle effect */
      }

      /* Media Query for Larger Screens */
      @media (min-width: 769px) {
      }

      /* Media Query for Smaller Screens (Mobile) */
      @media (max-width: 1000px) {
        .blog-container {
          margin: 20px; /* Adjust the margin for mobile screens */
        }
        article {
          margin: 0;
        }
      }

      @media (max-width: 1000px) {
        .container {
          flex-direction: column;
        }

        main {
          flex: 4;
        }

        .sidebar-container {
          display: none;
        }
      }
    </style>
  </body>


</html>
