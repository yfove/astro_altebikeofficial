---
import Header from "../components/header4.astro";
import BaseHead from "../components/BaseHead.astro";
import Horizontalbar from "../components/horizontalbar.astro";
import Horizontalbar2 from "../components/horizontalbar-guides.astro";
import Cta from "../components/cta.astro";
import Footer from "../components/footer2.astro";

const { title, description } = Astro.props || {};
---

<html lang="en" class="bg-zinc-950 text-white">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/logo.png" type="image/svg+xml" />
  <BaseHead title={"Articles"} description="A page to display all our blog posts" />
</head>

<body class="font-sans antialiased">
  <Header />

  <div class="layout max-w-6xl mx-auto px-4 sm:px-6 py-10">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-400 mb-6">
      <a href="/" class="hover:underline">Home</a>
      <span class="mx-2">â€º</span>
      <span class="text-white">{title}</span>
    </nav>

    <!-- Page Heading -->
    <header class="text-center space-y-2 mb-10">
      <p class="text-xs font-semibold uppercase tracking-wider text-fuchsia-500">Category</p>
      <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight gradient-text">
        {title}
      </h1>
      <p class="text-sm uppercase tracking-wide text-fuchsia-500">All Electric Lifestyle</p>

      {description && (
      <p class="mt-4 max-w-2xl mx-auto text-sm text-gray-400 hidden md:block">
        {description}
      </p>
      )}

      <hr class="mt-6 mx-auto border-gray-700 w-24" />
    </header>

    <!-- Content Slot -->
    <main>
      <slot />
    </main>
  </div>

  <!-- Call to Action & Horizontal bars -->
  <Cta />
  <Horizontalbar />
  <Horizontalbar2 />

  <Footer />
</body>

</html>