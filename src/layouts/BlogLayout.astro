---
import Header from "../components/header4.astro";
import BaseHead from "../components/BaseHead.astro";
import Cta from "../components/cta.astro";
import Footer from "../components/footer2.astro";

const { title, description } = Astro.props || {};
---

<html lang="en" class="bg-zinc-950 text-white">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/logo.png" type="image/svg+xml" />
  <BaseHead title={title || "Articles" } description={description || "A page to display all our blog posts" } />
</head>

<body class="font-sans antialiased">
  <Header />

  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-6">

    <!-- Breadcrumb -->
    <nav class="text-[11px] text-gray-400 mb-3 flex gap-1 items-center select-none">
      <a href="/" class="hover:underline">Home</a>
      <span aria-hidden="true">â€º</span>
      <span class="text-white truncate max-w-xs">{title}</span>
    </nav>

    <!-- Page Heading -->
    <header class="mb-6 max-w-xl">
      <p class="text-[5px] font-fine uppercase tracking-wider text-fuchsia-500 mb-1">Category</p>
      <h1 class="text-xl sm:text-2xl font-extrabold tracking-tight gradient-text leading-tight mb-1">
        {title}
      </h1>
      <p class="text-[5px] uppercase tracking-wide text-fuchsia-500 mb-2">All Electric Lifestyle</p>

      {description && (
      <p class="text-gray-400 text-xs leading-snug">
        {description}
      </p>
      )}

      <hr class="mt-4 border-gray-700 w-14" />
    </header>

    <!-- Content Slot -->
    <main class="prose prose-invert max-w-none">
      <slot />
    </main>
  </div>

  <Cta />
  <Footer />
</body>

</html>