---
import Header from "../components/header4.astro";
import BaseHead from "../components/BaseHead.astro";
import Horizontalbar from "../components/horizontalbar.astro";
import Horizontalbar2 from "../components/horizontalbar-guides.astro";
import Cta from "../components/cta.astro";
import Footer from "../components/footer2.astro";
const { title, description } = Astro.props || {};
import Alltags from "~/components/alltags.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/watch.svg" type="image/svg+xml" />
  </head>

  <BaseHead
    title={"Articles"}
    description="A page to display all our blog posts"
  />

  <body>
    <Header />

    <div class="layout m-2">
      <div
        class="title-heading mx-auto w-full max-w-6xl text-center md:text-center"
      >
        <div class="text-block my-4">
          <sub class="gradient-text uppercase">category</sub>
          <h1
            class="gradient-text font-bold uppercase tracking-tighter text-2xl"
          >
            {title}
          </h1>
          <sup class="gradient-text uppercase">All Electric Lifestyle</sup>
        </div>

        <hr class="mx-auto border-t-2 border-fuchsia-500 md:w-1/2" />
        <h2
          class="mx-auto hidden w-1/2 pt-2 font-bold text-gray-400 text-sm md:block"
        >
          {description}
        </h2>

        <main>
          <slot />
        </main>
      </div>

      <Cta />
      <Horizontalbar />
      <Horizontalbar2 />
    </div>
    <Footer />
  </body>


</html>
